<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mintmuseum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
      
        <activity
            android:name="com.example.mintmuseum.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.mintmuseum.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.example.mintmuseum.PaintingActivity"
            android:label="@string/title_activity_painting" >
        </activity>
        <activity
            android:name="com.example.mintmuseum.ShowPaitingActivity"
            android:label="@string/title_activity_show_paiting" >
        </activity>
        <activity
            android:name="com.example.mintmuseum.ShowInfoActivity"
            android:label="@string/title_activity_show_info" >
        </activity>
        <activity
            android:name="com.example.mintmuseum.GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name="com.example.mintmuseum.JoinActivity"
            android:label="@string/title_activity_join" >
        </activity>
        <activity
            android:name="com.example.mintmuseum.CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
    </application>

</manifest>